FROM centos:centos7
# RUN yum -y update; yum clean all
RUN yum -y install epel-release
RUN yum -y install dnf
RUN dnf -y install dnf-plugins-core

RUN dnf -y install nodejs npm 
RUN dnf -y install xorg-x11-server-Xvfb gtk2-devel gtk3-devel libnotify-devel GConf2 nss libXScrnSaver alsa-lib
RUN dnf -y copr enable konimex/neofetch
RUN dnf -y install neofetch neovim

ADD . /app
RUN cd /app; npm -y install

WORKDIR /app
CMD [ '/app/runme.sh' ]
